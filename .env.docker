# FinanceFlow - Docker Environment Variables
# Copy this to .env in your Coolify deployment

# =================================
# DOMAIN CONFIGURATION
# =================================
DOMAIN=your-domain.com

# =================================
# DATABASE & AUTH (REQUIRED)
# =================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_PASSWORD=your-secure-redis-password

# =================================
# AI SERVICE (REQUIRED)
# =================================
GEMINI_API_KEY=AIzaSyD...

# =================================
# TELEGRAM BOT (REQUIRED)
# =================================
TELEGRAM_BOT_TOKEN=7123456789:AAE...
TELEGRAM_WEBHOOK_SECRET=your-random-webhook-secret

# =================================
# SECURITY SECRETS (REQUIRED)
# =================================
NEXTAUTH_SECRET=your-random-nextauth-secret-min-32-chars
CRON_SECRET=your-random-cron-secret

# =================================
# OPTIONAL - PAYMENT & MONITORING
# =================================
# Stripe for subscriptions
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# SendGrid for emails
SENDGRID_API_KEY=SG....

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# =================================
# OPTIONAL - SELF-HOSTED DATABASE
# =================================
# Only if not using Supabase
# POSTGRES_USER=financeflow
# POSTGRES_PASSWORD=your-postgres-password
# DATABASE_URL=postgresql://financeflow:password@postgres:5432/financeflow